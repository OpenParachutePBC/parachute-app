platform :osx, '14.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'ephemeral', 'Flutter-Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure \"flutter pub get\" is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Flutter-Generated.xcconfig, then run \"flutter pub get\""
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_macos_podfile_setup

target 'Runner' do
  use_frameworks!

  flutter_install_all_macos_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_macos_build_settings(target)

    # Fix deployment target warnings - enforce minimum macOS 10.15
    # whisper_ggml requires 10.15, so we need to use that as the minimum
    target.build_configurations.each do |config|
      if config.build_settings['MACOSX_DEPLOYMENT_TARGET'].to_f < 10.15
        config.build_settings['MACOSX_DEPLOYMENT_TARGET'] = '10.15'
      end
    end
  end

  # Add build phase to fix libssh2 OpenSSL path
  runner_project = installer.aggregate_targets[0].user_project
  runner_target = runner_project.targets.find { |t| t.name == 'Runner' }

  if runner_target
    existing_phase = runner_target.shell_script_build_phases.find { |p| p.name == 'Fix libssh2 OpenSSL Path' }

    unless existing_phase
      puts "Adding 'Fix libssh2 OpenSSL Path' build phase to Runner target"
      phase = runner_target.new_shell_script_build_phase('Fix libssh2 OpenSSL Path')
      phase.shell_script = <<~SCRIPT
#!/bin/bash
# Bundle OpenSSL 3.x and fix libssh2 to use it
APP_MACOS="${BUILT_PRODUCTS_DIR}/${EXECUTABLE_FOLDER_PATH}"
LIBSSH2_PATH="$APP_MACOS/libssh2.1.dylib"
OPENSSL_SOURCE="/opt/homebrew/opt/openssl@3/lib/libcrypto.3.dylib"

if [ -f "$LIBSSH2_PATH" ] && [ -f "$OPENSSL_SOURCE" ]; then
    echo "Bundling OpenSSL 3.x with app..."
    cp "$OPENSSL_SOURCE" "$APP_MACOS/libcrypto.3.dylib"
    install_name_tool -id @executable_path/libcrypto.3.dylib "$APP_MACOS/libcrypto.3.dylib" 2>/dev/null || true

    echo "Fixing libssh2 to use bundled OpenSSL..."
    install_name_tool -change /opt/homebrew/opt/openssl@3/lib/libcrypto.3.dylib @executable_path/libcrypto.3.dylib "$LIBSSH2_PATH" 2>/dev/null || true
    install_name_tool -change /usr/lib/libcrypto.dylib @executable_path/libcrypto.3.dylib "$LIBSSH2_PATH" 2>/dev/null || true

    echo "✅ Git libraries fixed and OpenSSL bundled"
fi
      SCRIPT
      # Run after embedding frameworks
      phase.show_env_vars_in_log = '0'
      runner_project.save
    end
  end

  # Fix git2dart_binaries: Copy libssh2.1.dylib to Frameworks
  # The git2dart_binaries podspec is missing libssh2.1.dylib in vendored_libraries
  # The dylib is in pub-cache, not in Pods directory
  pub_cache_base = File.expand_path('~/.pub-cache/hosted/pub.dev')
  git2dart_version = Dir.glob(File.join(pub_cache_base, 'git2dart_binaries-*')).sort.last
  libssh2_source = File.join(git2dart_version, 'macos', 'libssh2.1.dylib') if git2dart_version

  if libssh2_source && File.exist?(libssh2_source)
    puts "✅ Found libssh2 at: #{libssh2_source}"

    runner_project = installer.aggregate_targets[0].user_project
    runner_target = runner_project.targets.find { |t| t.name == 'Runner' }

    if runner_target
      existing_phase = runner_target.shell_script_build_phases.find { |p| p.name == 'Copy Git Libraries' }

      if existing_phase
        puts "Updating 'Copy Git Libraries' build phase output paths"
        existing_phase.output_paths = [
          "${BUILT_PRODUCTS_DIR}/${FRAMEWORKS_FOLDER_PATH}/libssh2.1.dylib",
          "${BUILT_PRODUCTS_DIR}/${FRAMEWORKS_FOLDER_PATH}/libgit2-experimental.1.9.dylib"
        ]
        runner_project.save
      else
        puts "Adding 'Copy Git Libraries' build phase to Runner target"
        phase = runner_target.new_shell_script_build_phase('Copy Git Libraries')
        phase.shell_script = <<~SCRIPT
#!/bin/bash
# Copy libssh2 library (missing from git2dart_binaries podspec)
LIBSSH2_SOURCE="#{libssh2_source}"
LIBSSH2_DEST="${BUILT_PRODUCTS_DIR}/${FRAMEWORKS_FOLDER_PATH}/libssh2.1.dylib"

if [ -f "$LIBSSH2_SOURCE" ]; then
    echo "Copying libssh2 from: $LIBSSH2_SOURCE"
    echo "Copying libssh2 to: $LIBSSH2_DEST"
    mkdir -p "${BUILT_PRODUCTS_DIR}/${FRAMEWORKS_FOLDER_PATH}"
    cp "$LIBSSH2_SOURCE" "$LIBSSH2_DEST"

    # Fix OpenSSL path in libssh2 to use system OpenSSL instead of Homebrew
    # This prevents sandbox errors when loading Homebrew paths
    install_name_tool -change /opt/homebrew/opt/openssl@3/lib/libcrypto.3.dylib /usr/lib/libcrypto.dylib "$LIBSSH2_DEST" 2>/dev/null || true

    echo "✅ libssh2 copied and patched successfully"
else
    echo "⚠️  Warning: libssh2 not found at: $LIBSSH2_SOURCE"
fi

# Create symlink for libgit2-experimental.1.9.dylib -> libgit2.dylib
# git2dart looks for the experimental name but podspec ships the regular name
LIBGIT2_LINK="${BUILT_PRODUCTS_DIR}/${FRAMEWORKS_FOLDER_PATH}/libgit2-experimental.1.9.dylib"
LIBGIT2_TARGET="libgit2.dylib"

cd "${BUILT_PRODUCTS_DIR}/${FRAMEWORKS_FOLDER_PATH}"
if [ -f "$LIBGIT2_TARGET" ]; then
    ln -sf "$LIBGIT2_TARGET" "libgit2-experimental.1.9.dylib"
    echo "✅ Created symlink: libgit2-experimental.1.9.dylib -> libgit2.dylib"
fi
        SCRIPT
        # Declare output files to prevent "run during every build" warning
        phase.output_paths = [
          "${BUILT_PRODUCTS_DIR}/${FRAMEWORKS_FOLDER_PATH}/libssh2.1.dylib",
          "${BUILT_PRODUCTS_DIR}/${FRAMEWORKS_FOLDER_PATH}/libgit2-experimental.1.9.dylib"
        ]
        runner_project.save
      end
    end
  end

  # Add build phase to copy Opus library to app bundle
  opus_lib_source = File.join(File.dirname(__FILE__), 'Frameworks', 'libopus.dylib')
  if File.exist?(opus_lib_source)
    puts "✅ Found Opus library at: #{opus_lib_source}"

    # Add a shell script build phase to Runner target
    runner_project = installer.aggregate_targets[0].user_project
    runner_target = runner_project.targets.find { |t| t.name == 'Runner' }

    if runner_target
      # Check if the build phase already exists
      existing_phase = runner_target.shell_script_build_phases.find { |p| p.name == 'Copy Opus Library' }

      if existing_phase
        puts "Updating 'Copy Opus Library' build phase output paths"
        existing_phase.output_paths = ["${BUILT_PRODUCTS_DIR}/${FRAMEWORKS_FOLDER_PATH}/libopus.dylib"]
        runner_project.save
      else
        puts "Adding 'Copy Opus Library' build phase to Runner target"
        phase = runner_target.new_shell_script_build_phase('Copy Opus Library')
        phase.shell_script = <<-SCRIPT
#!/bin/bash
# Copy Opus library to app bundle
OPUS_SOURCE="${SRCROOT}/Frameworks/libopus.dylib"
OPUS_DEST="${BUILT_PRODUCTS_DIR}/${FRAMEWORKS_FOLDER_PATH}/libopus.dylib"

if [ -f "$OPUS_SOURCE" ]; then
    echo "Copying Opus library from: $OPUS_SOURCE"
    echo "Copying Opus library to: $OPUS_DEST"
    mkdir -p "${BUILT_PRODUCTS_DIR}/${FRAMEWORKS_FOLDER_PATH}"
    cp "$OPUS_SOURCE" "$OPUS_DEST"
    echo "✅ Opus library copied successfully"
else
    echo "⚠️  Warning: Opus library not found at: $OPUS_SOURCE"
fi
        SCRIPT
        # Declare output file to prevent "run during every build" warning
        phase.output_paths = ["${BUILT_PRODUCTS_DIR}/${FRAMEWORKS_FOLDER_PATH}/libopus.dylib"]
        runner_project.save
      end
    end
  else
    puts "⚠️  Warning: Opus library not found at: #{opus_lib_source}"
    puts "   Omi device recordings with Opus codec will not work!"
  end
end
